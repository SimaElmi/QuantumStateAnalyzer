<Window x:Class="Quantum_StateAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quantum State Analyzer" Height="450" Width="800">

    <Grid>
        <StackPanel Margin="20">
            <Button Name="Quantum" Click="Apply" Content="Apply" Margin="0 5"/>
            <Button Content="Run Bell Experiment" Click="RunBell" Margin="0 5"/>
            <TextBox Name="Input" Height="25" Width="200" Margin="0 5"/>
        </StackPanel>
    </Grid>
</Window>
